@model IEnumerable<SehatClone.Models.Hospital>
@{
    ViewBag.Title = "Hospitals";
}

<h2 class="text-center">Hospitals</h2>
<hr />

@if (Model.Count() > 0)
{
    foreach (var hospital in Model)
    {
        <div class="row">
            <div class="col-sm-6 col-sm-offset-3">
                <div class="box doctor">
                    <div class="row">
                        <div class="col-sm-3">
                            <img src="@hospital.ImageUrl" alt="Doctor Image" class="img-circle img-responsive" />
                        </div>
                        <div class="col-sm-3">
                            <h3>
                                @hospital.ContactName
                            </h3>
                        </div>
                        <div class="col-sm-6">
                            <h5>
                                <i class="glyphicon glyphicon-map-marker"></i>
                                @hospital.Location
                            </h5>
                            <h5>
                                <i class="glyphicon glyphicon-phone"></i>
                                @hospital.Phone
                            </h5>
                            <h5>
                                <i class="glyphicon glyphicon-envelope"></i>
                                @hospital.Email
                            </h5>
                        </div>
                    </div>
                    <hr />
                    <a href="@Url.Action("Detail", "Hospitals", new { id = hospital.Id })" class="btn btn-block btn-success">
                        View Detail
                    </a>
                </div>
            </div>
        </div>
    }
}
else
{
    <div class="row">
        <div class="col-sm-6 col-sm-offset-3">
            <div class="alert alert-danger">
                No Hospitals To Show
            </div>
        </div>
    </div>
}

