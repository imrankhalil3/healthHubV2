@model IEnumerable<SehatClone.Models.Doctor>
@{
    ViewBag.Title = "Doctors";
}

<h2 class="text-center">Doctors</h2>
<hr />

@if (Model.Count() > 0)
{
    foreach (var doctor in Model)
    {
        <div class="row">
            <div class="col-sm-6 col-sm-offset-3">
                <div class="box doctor">
                    <div class="row">
                        <div class="col-sm-3">
                            <img src="@doctor.ImageUrl" alt="Doctor Image" class="img-circle img-responsive" />
                        </div>
                        <div class="col-sm-6">
                            <h3>
                                @doctor.Name
                            </h3>
                            @if (doctor.Speciality.Count > 0)
                            {
                                <h5>
                                    @doctor.Speciality[0].Name
                                </h5>
                            }

                        </div>
                        <div class="col-sm-3">
                            <h5>
                                <i class="glyphicon glyphicon-map-marker"></i>
                                @doctor.City
                            </h5>
                            <h5>
                                <i class="glyphicon glyphicon-phone"></i>
                                @doctor.Phone
                            </h5>
                            <h5>
                                <i class="glyphicon glyphicon-briefcase"></i>
                                @doctor.ExperienceInYears
                            </h5>
                        </div>
                    </div>
                    <hr />
                    <a href="@Url.Action("Detail", "Doctors", new { id = doctor.Id })" class="btn btn-block btn-success">
                        View Detail
                    </a>
                </div>
            </div>
        </div>
    }
}
else
{
    <div class="row">
        <div class="col-sm-6 col-sm-offset-3">
            <div class="alert alert-danger">
                No Doctors To Show
            </div>
        </div>
    </div>
}

